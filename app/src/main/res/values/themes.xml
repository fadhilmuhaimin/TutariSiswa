<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TutariSiswa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleBlue">
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/_28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleInput">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_21sp</item>
    </style>

    <style name="ButtonBigBlue">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="android:paddingTop">@dimen/_14dp</item>
        <item name="android:paddingBottom">@dimen/_14dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_21dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
    </style>

    <style name="titleHome">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>
    <style name="titleName">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="titleBig">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="titleBigBold">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="titleNameDesc">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="numberPermission">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="titleLocationDesc">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="titleNamePermission">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="titleNameProfile">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="titleProfileDesc">
        <item name="android:textColor">#ffffff</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="inputfield">
        <item name="boxBackgroundColor">#F1F3F6</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="rapih">
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_marginBottom">@dimen/_4dp</item>
    </style>
</resources>